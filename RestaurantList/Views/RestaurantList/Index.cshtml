@model List<RestaurantList.Models.Restaurant>

@{
    ViewData["Title"] = "Explore Restaurants";
}

<style>
    .restaurant-card {
        transition: transform 0.2s;
        border-radius: 15px;
    }

        .restaurant-card:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .status-badge {
        position: absolute;
        top: 10px;
        right: 10px;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-4 fw-bold">Restaurants</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow">Add New Restaurant</a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 restaurant-card border-0 shadow-sm position-relative">
                    <span class="badge @(item.IsOpenNow ? "bg-success" : "bg-danger") status-badge">
                        @(item.IsOpenNow ? "Open Now" : "Closed")
                    </span>

                    <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@item.Name">

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title fw-bold mb-0">@item.Name</h5>
                            <span class="text-warning"><i class="bi bi-star-fill"></i> @item.Rating</span>
                        </div>

                        <p class="text-muted small mb-1"><i class="bi bi-tag"></i> @item.CuisineType • @item.PriceRange</p>
                        <p class="text-muted small mb-3"><i class="bi bi-geo-alt"></i> @item.Address</p>

                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm flex-grow-1">View</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
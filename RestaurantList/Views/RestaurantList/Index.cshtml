@model List<RestaurantList.Models.Restaurant>

@{
    ViewData["Title"] = "Restaurant Index";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1>Restaurants</h1>
        <a asp-action="Create" class="btn btn-success">Add New Restaurant</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-6 mb-4">
            <div class="card h-100 pb-3">
                <div class="d-flex justify-content-center pt-3">
                    <h4>@item.Name</h4>
                </div>

                <div class="d-flex justify-content-center my-2">
                    <img src="@item.ImageUrl" style="width: 70%; height: 200px; object-fit: cover;" alt="@item.Name" />
                </div>

                <div class="d-flex justify-content-center mb-3">
                    <p class="text-muted">@item.Address</p>
                </div>

                <div class="d-flex justify-content-center gap-2">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>
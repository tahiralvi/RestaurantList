@model RestaurantList.Models.Restaurant

@{
    ViewData["Title"] = "Restaurant Details";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" style="width: 50%" />
    </div>
    <div class="d-flex justify-content-center">
        <h3>@Model.Address</h3>
    </div>
    <div class="d-flex justify-content-center">
        Dishes:
        <ul>
            @foreach (var item in Model.RestaurantDishes)
            {
                <li>
                    @item.Dish.Name, @item.Dish.Price.ToString("N2")
                    Dollars
                </li>
            }
        </ul>
    </div>
    <div class="d-flex justify-content-center">
        <a class="btn btn-info" asp-action="Index">Back to Restaurant List</a>
    </div>
</div>



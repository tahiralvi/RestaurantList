@model RestaurantList.Models.Restaurant

<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="display-4 fw-bold">@Model.Name</h1>
                <span class="badge bg-warning text-dark fs-5">★ @Model.Rating</span>
            </div>

            <p class="lead">@Model.Description</p>
            <hr />

            <h3>Menu</h3>
            <div class="list-group shadow-sm">
                @foreach (var rd in Model.RestaurantDishes)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">@rd.Dish.Name</h6>
                        </div>
                        <span class="fw-bold">@rd.Dish.Price.ToString("C")</span>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-4">
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
                <div class="card-body">
                    <h5>Info & Hours</h5>
                    <p class="mb-1"><strong>Cuisine:</strong> @Model.CuisineType</p>
                    <p class="mb-1"><strong>Price:</strong> @Model.PriceRange</p>
                    <p class="mb-1"><strong>Phone:</strong> @Model.PhoneNumber</p>
                    <p class="mb-3 text-muted">@Model.Address</p>

                    <div class="alert @(Model.IsOpenNow ? "alert-success" : "alert-danger") py-2">
                        Hours: @Model.OpeningTime.ToString(@"hh\:mm") - @Model.ClosingTime.ToString(@"hh\:mm")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model RestaurantList.Models.Restaurant

@{
    ViewData["Title"] = "Add New Restaurant";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 shadow-sm p-4 bg-white rounded">
            <h2 class="mb-4 text-primary">Add New Restaurant</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <partial name="_RestaurantForm" />

                <div class="mt-4 border-top pt-3">
                    <button type="submit" class="btn btn-primary px-4">Save Restaurant</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}